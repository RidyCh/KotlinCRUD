<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#19202A"
    android:padding="16dp"
    tools:context=".ui.home.AddGameFragment">

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white"
        android:text="@string/title_add_game" />

    <!-- Name Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:id="@+id/tv_name"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_gravity="start|top"
        android:layout_marginTop="100dp" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="top|start"
        android:background="#dff2f7"
        android:layout_marginTop="140dp"
        android:hint="Enter game name"
        android:paddingHorizontal="12dp" />

    <!-- Developer Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developer: "
        android:id="@+id/tv_developer"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_gravity="start|top"
        android:layout_marginTop="210dp" />

    <EditText
        android:id="@+id/et_developer"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="top|start"
        android:background="#dff2f7"
        android:layout_marginTop="250dp"
        android:hint="Enter developer name"
        android:paddingHorizontal="12dp" />

    <!-- Add Game Button -->
    <Button
        android:id="@+id/add_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tambah"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="#3B82F6"
        android:layout_gravity="bottom"
        android:layout_marginBottom="160dp" />

</FrameLayout>
